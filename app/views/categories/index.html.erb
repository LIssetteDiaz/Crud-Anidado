<p id="notice"><%= notice %></p>
<div class="card">

  <h1 class="pl-3 pt-2 ">Categorias</h1>
  <div class="card p-3 m-3">
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cantidad de productos</th>
          <th colspan="3"></th>
        </tr>
      </thead>


      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, category %></td>
            <td><%= category.products.count %></td>
            <td><%= link_to 'Editar', edit_category_path(category), class:'btn' %></td>
            <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Estas seguro?' }, class:'btn' %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>

  <hd><%= link_to 'Nueva categoria', new_category_path, class:'btn ml-3 mb-3' %>
</div>
